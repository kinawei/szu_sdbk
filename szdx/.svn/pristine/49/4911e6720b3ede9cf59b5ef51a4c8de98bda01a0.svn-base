html {
	padding: 0;
	margin: 0;
	background: #ff8400;
}

.backBtn {
	position: absolute;
	top: 0;
	left: 0;
	width: 50px;
	height: 50px;
	line-height: 50px;
	text-align: center;
	color: #FFF;
	font-size: 32px;
}
.backBtn a {
	color: #FFF;
}

.teacherImgContainer {
	padding-top: 20px;
}
.teacherImg {
	width: 150px;
	margin: 0 auto;
	border-radius: 10px;
	display: block;
}
.ballot {
	position: relative;
	top: -40px;
	right: -50%;
	margin-left: 40px;
	width: 60px;
	height: 60px;
	color: #251000;
	line-height: 60px;
	font-size: 16px;
	text-align: center;
	background: #fffcd2;
	-webkit-transform: rotate(-15deg);
	box-shadow: 0 0 5px rgba(0, 0, 0, .2);
	border-radius: 50%;
	display: block;
}

.teacherName {
	margin-top: -50px;
	text-align: center;
	color: #FFF;
	text-shadow: 0 0 5px rgba(0, 0, 0, .2);
}

.teacherDes {
	width: 90%;
	margin: 0 auto;
	padding: 15px;
	color: #251000;
	border-radius: 10px;
	background: #fffcd2;
}
.teacherDes h3 {
	font-size: 16px;
	line-height: 28px;
}
.teacherDes p {
	text-indent: 2em;
}

img {
	width: 90%;
	margin: 10px auto;
	display: block;
}

.fullBtn {
	width: 90%;
	margin: 10px auto;
	height: 40px;
	line-height: 40px;
	color: #251000;
	font-size: 14px;
	text-align: center;
	background: #ffae00;
	border-radius: 5px;
	box-shadow: 0 2px 0 #ff8400;
}

.author {
	float: left;
	width: 100%;
	height: 40px;
}
.author p {
	color: #b15c00;
	font-size: 12px;
	line-height: 40px;
	text-align: center;
	text-shadow: 0 1px 0 #ffae00;
}